function(EXTRACT_SOURCE FOLDER)
    file(GLOB ${FOLDER}_SOURCE "${FOLDER}/*.cc")
    file(GLOB ${FOLDER}_SOURCE_TESTS "${FOLDER}/*Test.cc")
    list(FILTER ${FOLDER}_SOURCE EXCLUDE REGEX ".*Test.cc")
    set(${FOLDER}_SOURCE ${${FOLDER}_SOURCE} PARENT_SCOPE)
    set(${FOLDER}_SOURCE_TESTS ${${FOLDER}_SOURCE_TESTS} PARENT_SCOPE)
endfunction()